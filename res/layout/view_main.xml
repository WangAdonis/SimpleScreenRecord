<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_preview"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_load_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LoadImage"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_1_image_to_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1ImageToVideo"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="captrue" />

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="start record" />

        <Button
            android:id="@+id/btn_finish_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="finish record" />

        <Button
            android:id="@+id/btn_open_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open record"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:text="1.仅用于Android4.3或以下版本\n2.系统需要root\n3.使用前请先在开发者选项中勾选“停用hw叠加层”, 不然可能黑屏" />

</RelativeLayout>